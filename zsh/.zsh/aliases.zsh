# --- Modern CLI Replacements ---
alias cat="bat"
alias ls="eza"
alias ll="eza -la --icons --git"
alias la="eza -a --icons"
alias lt="eza --tree --icons --level=2"
alias diff="delta"

# --- Git ---
alias g="git"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gl="git log --oneline --graph --decorate"
alias gd="git diff"
alias gco="git checkout"
alias gb="git branch"
alias lg="lazygit"

# --- Navigation ---
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# --- Editor ---
alias v="nvim"
alias vim="nvim"

# --- Misc ---
alias pip="pip3"
alias reload="source ~/.zshrc"
